<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>






<div class="form-group">
  <div class="field">
    <%= f.label :first_name, class: "control-label col-md-2" %>

    <div class="form-controls col-md-4">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
  <%= f.label :last_name, class: "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>
</div>
</div>

<div class="form-group">
  <div class="field">
  <%= f.label :email, class: "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.email_field :email, :class => 'form-control' %>
  </div>
</div>
</div>

<div class="form-group">
  <div class="col-md-4 ">
    <div class="action">
      <%= f.submit class: "btn btn-primary btn-md active" %>
      <%= f.button link_to('Cancel', users_path), class: "btn btn-default btn-md active" %>
    </div>
  </div>
</div>
<% end %>
