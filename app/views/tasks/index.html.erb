<body>

<div class="container">
  <div class="page-header">
    <div class="pull-right">

    <%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info" %>

  </div>
<h1>Listing Tasks</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>

      <td><%= link_to task.description, project_task_path(@project, task) %></td>
      <td><div class="text-right">

          <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>


          <%= link_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

  </div>
</td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
</body>
