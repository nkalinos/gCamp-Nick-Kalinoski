<body>

<div class="container">
  <div class="page-header">

    <div class="pull-right">

    <%= link_to 'New Task', new_project_task_path, class: "btn btn-info" %>


  </div>

<h1>Listing Tasks</h1>
</div>
<ol class="breadcrumb">
  <li class='active'><%= link_to 'Projects', projects_path %></li>
  <li class="active"><%= link_to @project.name, project_path(@project) %></li>
  <li class="active">Tasks</li>

</ol>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
    <tr>

      <td><%= link_to task.description, project_task_path(@project, task) %>
        <span class='badge'><%= task.comments.count %></span> </td>
      <td>
        <div class="text-right">

          <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>


          <%= link_to '', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %>

  </div>
</td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
</body>
