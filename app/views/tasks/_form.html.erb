<%= form_for(@task, html: {class:"form-horizontal"}) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :date %>
    </div>
    <div class="col-md-4">
      <%= f.date_select :date, class: "form-control" %>
    </div>
  </div>
</div>


<% if @task.description != nil %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :complete %>
    </div>
    <div class="col-md-4">
      <%= f.check_box :box %>
    </div>
  </div>
</div>
<% end %>






<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary btn-md active" %>
      <%= f.button link_to('Cancel', tasks_path), class: "btn btn-default btn-md active" %>
    </div>
  </div>
</div>
<% end %>




