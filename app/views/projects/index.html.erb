
<body>
<div class="container">
  <div class="page-header">
    <div class="pull-right">

      <%= link_to 'Create Project', new_project_path, class: "btn btn-info" %>

    </div>
    <h1>Create Project</h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Tasks Count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if current_user %>
      <% current_user.projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
      <td><%= link_to pluralize(project.tasks.count, "Task"), project_tasks_path(project, @task)%> </td>

        <td><div class="text-right">
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-info" %>
          <%= link_to '', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %>
        </div>
      </td>
    </tr>
    <% end %>
  <% end %>
</tbody>
</table>

<br>

</div>
</body>
