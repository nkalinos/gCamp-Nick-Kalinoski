<!DOCTYPE html>
<html>
<head>
 <title>gCamp</title>
 <%= favicon_link_tag 'pokeball.ico' %>
 <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
 <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
 <%= csrf_meta_tags %>
</head>
<body>

 <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
   <div class="container">
     <div class="navbar-header">
       <a class="navbar-brand" href="/">gCamp</a>
     </div>
     <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
        <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %></li>
        <li><%= link_to 'Sign out', logout_path %></li>
        <% else %>
        <li><%= link_to 'Sign in', login_path %></li>
        <li><%= link_to 'Sign Up', new_registration_path %></li>
        <% end %>
      </ul>
     </div>
   </div>

 <div class="container">

   <% flash.each do |type, message| %>
   <% if type == "notice" %>
   <div class="alert alert-success"><b><center><%= message %></b></center></div>
   <% elsif type == "alert" %>
   <div class="alert alert-danger"><b><center><%= message %></b></center></div>
   <% end %>
   <% end %>

   <%= yield %>

   <footer>
     <div class="row">
       <div class= "col-md-6">
         <%= link_to "About", about_path %>
         |
         <%= link_to "Terms", terms_path %>
         |
         <%= link_to "FAQ", faq_path %>
         <% if current_user %>
         |
         <%= link_to "Users", users_path %>
         |
         <%= link_to "Projects", projects_path %>
         <% end %>
       </div>

       <div class="col-md-6 text-right">
         <a href="https://www.linkedin.com/profile/view?id=380638818&trk=nav_responsive_tab_profile_pic">
           <%= image_tag('footer/linkedin_icon.png', class: "img-footer") %>
         </a>
         <a href="https://github.com/nkalinos">
           <%= image_tag('footer/GitHub-Mark.png', class: "img-footer") %>
         </a>
         <a href="https://twitter.com/nickkalinoski">
           <%= image_tag('footer/twitter-bird-16x16.png', class: "img-footer") %>
         </a>
         <a href="https://students.gschool.it/students/216">
           <%= image_tag("footer/gschool logo 2.jpeg", class: "img-footer") %>
         </a>
       </div>
     </div>
   </footer>

 </div>

 <!-- Bootstrap core JavaScript
 ================================================== -->
 <!-- Placed at the end of the document so the pages load faster -->
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
 <script src="../../dist/js/bootstrap.min.js"></script>
 <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
 <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>

</body>
</html>
